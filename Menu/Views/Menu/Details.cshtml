@model Menu.Models.Dish

@{
    ViewData["Title"] = "Dish Details";
}

<div class="container mt-5">
    <!-- Dish Name Centered -->
    <div class="text-center mb-4">
        <h2 class="fw-bold">@Model.Name</h2>
    </div>

    <!-- Dish Card -->
    <div class="d-flex justify-content-center mb-5">
        <div class="card text-center shadow-lg" style="width: 20rem;">
            <img src="@Model.ImageUrl" class="card-img-top rounded" alt="@Model.Name" style="height: 250px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title text-primary">@Model.Name</h5>
                <p class="card-text text-muted fs-5">$@Model.Price.ToString("0.00")</p>
            </div>
        </div>
    </div>

    <!-- Ingredients Section -->
    <div class="text-center mb-4">
        <h4 class="fw-semibold">Ingredients</h4>
    </div>
    <div class="d-flex justify-content-center">
        <ul class="list-group list-group-flush w-50">
            @foreach (var item in Model.DishIngredients)
            {
                <li class="list-group-item text-center">@item.Ingredeint.Name</li>
            }
        </ul>
    </div>

    <!-- Back Button -->
    <div class="text-center mt-4">
        <a class="btn btn-info px-4" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Back to Menu
        </a>
    </div>
</div>
